        <com.google.android.material.button.MaterialButton android:id="@+id/btn_c1_6" style="@style/CalculadoraBotaoNumero" android:layout_height="0dp" android:layout_weight="1" app:strokeWidth="1dp" app:strokeColor="?android:attr/textColorPrimary" app:backgroundTint="@color/blue" android:text="6"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_c1_7" style="@style/CalculadoraBotaoNumero" android:layout_height="0dp" android:layout_weight="1" app:strokeWidth="1dp" app:strokeColor="?android:attr/textColorPrimary" app:backgroundTint="@color/violet" android:text="7"/>
