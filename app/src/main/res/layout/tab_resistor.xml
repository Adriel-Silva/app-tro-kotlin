        <com.google.android.material.button.MaterialButton android:id="@+id/btn_c1_9" style="@style/CalculadoraBotaoNumero" android:layout_height="0dp" android:layout_weight="1" app:strokeWidth="1dp" app:strokeColor="?android:attr/textColorPrimary" app:backgroundTint="@color/white" android:text="9"/>
    </LinearLayout>

